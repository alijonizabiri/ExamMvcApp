@model Web.Data.Models.CreateCategory

<form asp-action="Delete" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Parent Id:</label>
                <input asp-for="ParentId" type="int" class="form-control required" placeholder="Enter first name" tabindex="1">
            </div>
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="Title" type="text" class="form-control required" placeholder="Enter last name" tabindex="2">
            </div>
            <div class="form-group">
                <label>MetaTitle:</label>
                <input asp-for="MetaTitle" type="text" class="form-control required" placeholder="Enter email" tabindex="3">
            </div>
            <div class="form-group">
                <label>Slug:</label>
                <input asp-for="Slug" type="text" class="form-control required" placeholder="Enter age" tabindex="4">
            </div>
            <div class="form-group">
                <label>Content:</label>
                <input asp-for="Content" type="text" class="form-control required" placeholder="Enter age" tabindex="4"></div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Delete Category</button>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>